<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>PupStream Dashboard</title>
        <link href="tailwind.css" rel="stylesheet">
    </head>
    <body class="bg-gray-900 text-white">
        <header class="bg-gray-800 shadow-md p-4">
            <h1 class="text-2xl font-bold text-center">Pupstream Dashboard</h1>
        </header>

        <main class="container mx-auto mt-8">
            <section class="bg-gray-800 p-6 rounded-md shadow-md">
                <h2 class="text-xl font-semibold mb-4">Twitch Channels</h2>
                <table class="table-auto w-full text-left text-sm">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-4 py-2">Twitch Username</th>
                            <th class="px-4 py-2">Discord Channel</th>
                            <th class="px-4 py-2">Priority</th>
                            <th class="px-4 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% channels.forEach(channel => { %>
                        <tr class="bg-gray-600 border-b border-gray-700">
                            <td class="px-4 py-2"><%= channel.twitch_username %></td>
                            <td class="px-4 py-2"><%= channel.discord_channel_id %></td>
                            <td class="px-4 py-2"><%= channel.is_priority ? 'Yes' : 'No' %></td>
                            <td class="px-4 py-2">
                                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">
                                    Edit
                                </button>
                                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </section>
        </main>
    </body>
</html>